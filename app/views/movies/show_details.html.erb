<div class="page-header">
  <h1>Movie # <%= @movie.id %></h1>
</div>

<dl class="dl-horizontal">

  <dt>Title</dt>
  <dd><%= @movie.title %></dd>

  <dt>Year</dt>
  <dd><%= @movie.year %></dd>

  <dt>Duration</dt>
  <dd><%= @movie.duration %></dd>

  <dt>Description</dt>
  <dd><%= @movie.description %></dd>

  <dt>Image URL</dt>
  <dd><img src="<%= @movie.image_url %>"</dd>

  <p>
    <a href="/" class="btn btn-primary">Back to all Movies</a>
  </p>

</dl>
